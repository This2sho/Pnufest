<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/youtube_subject1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/youtube_recycler_view1"
            android:text="공부 동기부여"
            android:textSize="25dp"
            android:padding="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/youtube_recycler_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/youtube_subject1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/youtube_subject2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/youtube_recycler_view1"
            app:layout_constraintBottom_toTopOf="@+id/youtube_recycler_view2"
            android:text="취업 팁"
            android:textSize="25dp"
            android:padding="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/youtube_recycler_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/youtube_subject2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/youtube_subject3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/youtube_recycler_view2"
            app:layout_constraintBottom_toTopOf="@+id/youtube_recycler_view3"
            android:text="코딩테스트"
            android:textSize="25dp"
            android:padding="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/youtube_recycler_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/youtube_subject3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

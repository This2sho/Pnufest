<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sumnail_view"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:background="@drawable/edge"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/sumnail_name"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintBottom_toTopOf="@+id/sumnail_image"
        android:gravity="center"
        android:textAlignment="center"
        android:text="학생 지원 시스템"
        android:autoSizeTextType="uniform"
        />

    <ImageView
        android:id="@+id/sumnail_image"
        card_view:layout_constraintTop_toBottomOf="@id/sumnail_name"
        card_view:layout_constraintLeft_toLeftOf="@id/sumnail_name"
        card_view:layout_constraintRight_toRightOf="@id/sumnail_name"
        card_view:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/student_support"
        />

</androidx.constraintlayout.widget.ConstraintLayout>